<% provide(:title, '拠点情報の修正') %>
<h1>拠点一覧</h1>

<table class="table table-bordered table-condensed user-table table-text-center">
  
  <thead>
    <tr>
      <th>修正</th>
      <th>削除</th>
      <th>拠点番号</th>
      <th>拠点名</th>
      <th>拠点種類</th>
    </tr>
  </thead>
  
  <tbody>
    <% @bases.each do |base| %>
    <tr>
      <th>
         <%= link_to "修正", edit_basis_url(base), remote: true, class: "btn btn-primary" %>
      </th>
      <th><%= link_to "削除", basis_path(base), method: :delete,data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %></th>
      <th><%= base.base_number %></th>
      <th><%= base.base_name %></th>
      <th><%= base.base_format %></th>
    </tr>
    <% end %>
  </tbody>
  </table>

  <table>
    <div class="panel-group">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">
            <a data-toggle="collapse" href="#collapse-add"><button type="submit" class="btn btn-primary">拠点情報追加</button></a>
            </h4>
        </div>
        <div id="collapse-add" class="panel-collapse collapse">
          <ul class="list-group">
            <%= render partial: 'base' %>
          </ul>
        </div>
      </div>
      </div>
  </table>
  
  <div id="edit-base" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

