<% provide(:title, 'All Users') %>
  <h1>全てのユーザ一</h1>

<div class="csv_holder">
  <div>
    <%= link_to "CSV出力", users_path(format: :csv), class: "btn btn-primary" %>
  </div>
</div>


    <% @users.each do |user| %>
      <tr>
        <td>
          <% if current_user.admin?  %>
            <div class="col-md-10 col-md-offset-1"></div>
            <%= user.name %><br>
          <% end %>
        </td>
        
          <% if current_user.admin? && !current_user?(user) %>
           
            <%= link_to "削除", user, method: :delete,data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %><br>
              <div class="panel-group">
              <div class="panel panel-default">
              <div class="panel-heading">
                
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#collapse<%= user.id %>"><button type="submit" class="btn btn-primary">編集</button></a>
              </h4>
              </div>
                <div id="collapse<%=user.id %>" class="panel-collapse collapse">
                  <!--<div class="panel-bpdy">%= render 'user', { user: user } %></div>-->
                </div>
              </div>
              </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>

