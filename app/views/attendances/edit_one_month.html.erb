<% provide(:title, @user.name) %>
<%= form_with(model: @user, url: attendances_update_one_month_user_path(date: @first_day), local: true, method: :patch) do |f| %>
  <div>
    <!--<h1>勤怠編集画面</h1>-->
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
      <thead>
        <tr>
          <th>日付</th>
          <th>曜日</th>
          <th>出社</th>
          <th>退社</th>
          <th>翌日</th>
          <th>在社時間</th>
          <th>備考</th>
          <th>指示者確認㊞</th>
        </tr>
      </thead>
      <tbody>
        <% @attendances.each do |day| %>
          <%= f.fields_for "attendances[]", day do |attendance| %>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td>
                <% if day.worked_on.wday == 6 %>
                  <font color="Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
                <% elsif day.worked_on.wday == 0 %>
                  <font color="Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
                <% else %>
                  <%= $days_of_the_week[day.worked_on.wday] %>
                <% end %>
              </td>
               
              <% if Date.current < day.worked_on %>
                <td><%= attendance.time_field :edit_started_at, readonly: true, class: "form-control" %></td>
                <td><%= attendance.time_field :edit_finished_at, readonly: true, class: "form-control" %></td>
              <% else %>
                <td><%= attendance.time_field :edit_started_at, class: "form-control" %></td>
                <td><%= attendance.time_field :edit_finished_at, class: "form-control" %></td>
              <% end %>
              <td><%= attendance.check_box :next_day, id: "next_day" %></td>
              <td>
                <% if day.edit_request_status == "承認" || day.edit_request_status == "否認" %>
                  <%= str_times = working_times(day.edit_started_at.floor_to(15.minutes) , day.edit_finished_at.floor_to(15.minutes)) %>
                  <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
                <% end %>
              </td>
              <td><%= attendance.text_field :note, class: "form-control" %></td>
              <td><%= attendance.select :edit_confirmation, options_from_collection_for_select(@superiors, :name, :name, 1), {include_blank: true}, { class: "form-control" } %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="center">
    <%= link_to "キャンセル", user_path(date: @first_day), class: "btn btn-lg btn-primary" %>
    <%= f.submit "編集を保存する", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>